- var linkItems = ['facebook-official', 'twitter', 'google-plus', 'linkedin']
- var linkUrls = ['facebook.com', 'twitter.com', 'google.com', 'linkedin.com']

footer.footer
  .footer_top
    .container
      .footer_title Get in touch
      .footer_links
        each item, key in linkItems
          a.footer_social(href=linkUrls[key])
            i(class="fa fa-" + item aria-hidden ="true")
            span.visually-hidden= linkItems[key]
      .footer_text Sun me friend
      form(action="#" method="post")
      .footer_field: input.footer_input(type="email" placeholder="Email Address")
      button(type="submit").button Subscribe
  .footer_bottom
    .footer_copy Cssauthor.com &copy; 2020 year
